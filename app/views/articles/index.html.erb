<p id="notice"><%= notice %></p>



<div class="container">
<h1 class="text-center mb-5">Articles</h1>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
      
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article), class:"text-warning" %></td>
        <td><%= truncate(article.description, length: 60) %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: "text-primary" %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

