<div class="center container"> 
    <div class="jumbotron mt-4 text-dark">
        <h1 class="display-4 mt-5"><%= @article.title %></h1>
        <hr class="my-4">
        <p class="lead"><%= @article.description %></p>
        
        <div class="article-actions mt-5">
          <%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary btn-lg" %>
          <%= link_to "Delete", article_path(@article), method: :delete, class: "btn btn-danger btn-lg" %>
          <%= link_to "Back", articles_path, class: "btn btn-warning btn-lg" %>
        </div>
    </div>
</div>

