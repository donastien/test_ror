<%= form_with(model: article, local: true, :html => {class: "form-horizontal", role: "form"}) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row"> 
          <div class="col-sm-2 col-form-label">
            <%= form.label :title %>
          </div>
          <div class="col-sm-6">
          <%= form.text_field :title, class: "form-control", placeholder: "Titre de l'article" %>
          </div>
  </div>

  <div class="form-group row"> 
          <div class="col-sm-2 col-form-label">
          <%= form.label :description %>
          </div>
          <div class="col-sm-6">
          <%= form.text_area :description, class: "form-control", placeholder: "Description" %>
          </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>

<% end %>

